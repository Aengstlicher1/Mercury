<Page
    x:Class="Mercury.Views.Pages.SearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mercury.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Mercury.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SearchView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <ItemsControl
            Grid.Row="1"
            Margin="0,4"
            ItemsSource="{Binding SearchResults}"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.VirtualizationMode="Recycling">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="models:Song">
                    <ui:Button
                        Height="60"
                        Margin="8,4"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch">
                        <Grid HorizontalAlignment="Stretch">
                            <StackPanel
                                HorizontalAlignment="Left"
                                Orientation="Horizontal"
                                Tag="Left">
                                <Border
                                    Width="48"
                                    Height="48"
                                    Margin="4,4"
                                    ClipToBounds="True"
                                    CornerRadius="6">
                                    <Border.Background>
                                        <ImageBrush
                                            ImageSource="{Binding Media.Thumbnails.MediumResUrl}"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            Stretch="UniformToFill" />
                                    </Border.Background>
                                </Border>
                                <Grid Margin="2,0,0,0">
                                    <TextBlock
                                        Margin="0,2,0,0"
                                        VerticalAlignment="Top"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        Text="{Binding Title}" />
                                    <TextBlock
                                        Margin="0,0,0,2"
                                        VerticalAlignment="Bottom"
                                        Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                                        Text="{Binding Author}" />
                                </Grid>
                            </StackPanel>

                            <StackPanel
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Tag="Right">
                                <TextBlock
                                    Margin="0,0,8,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{Binding FormatedDurarion}" />
                            </StackPanel>
                        </Grid>
                    </ui:Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
