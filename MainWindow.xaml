<ui:FluentWindow
    x:Class="Mercury.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mercury"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Mercury.Models"
    xmlns:converters="clr-namespace:Mercury.Models.Converters"
    xmlns:pages="clr-namespace:Mercury.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Name="Window"
    Title="Mercury"
    Width="800"
    Height="450"
    MinWidth="600"
    MinHeight="240"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStyle="None"
    mc:Ignorable="d">
    <ui:FluentWindow.Resources>
        <converters:MultiValueConverter x:Key="MultiValueConverter"/>
    </ui:FluentWindow.Resources>

    <Grid>
        <ui:TitleBar
            Name="TitleBar"
            Title="Mercury"
            Grid.Row="0"
            HorizontalContentAlignment="Stretch"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon RenderOptions.BitmapScalingMode="HighQuality" Source="/Assets/Letter.png" />
            </ui:TitleBar.Icon>
            <ui:TitleBar.CenterContent>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBox
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        PlaceholderText="Search songs, artist..."
                        Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </ui:TitleBar.CenterContent>
        </ui:TitleBar>

        <ui:NavigationView
            Name="NavView"
            BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
            IsBackButtonVisible="Visible"
            IsFooterSeparatorVisible="False"
            IsPaneOpen="False"
            IsPaneToggleVisible="False"
            IsTopSeparatorVisible="False"
            PaneDisplayMode="Left"
            TitleBar="{Binding ElementName=TitleBar, Mode=OneWay}">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Icon="{ui:SymbolIcon Symbol=Search24}"
                    NavigationCacheMode="Required"
                    TargetPageType="{x:Type pages:SearchView}" />
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>

        <Border
            Name="HudBorder"
            Width="500"
            Height="64"
            VerticalAlignment="Bottom"
            Background="{DynamicResource ControlFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="2,2,2,0"
            CornerRadius="6,6,0,0">
            <Grid>
                <StackPanel
                    Margin="0,0,6,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Tag="Right">
                    <ui:Button
                        Name="ToggleHud1"
                        Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
                        Margin="6,12"
                        VerticalAlignment="Stretch"
                        Appearance="Transparent"
                        BorderThickness="0"
                        Command="{Binding SwtichHudVisibilityCommand}"
                        Icon="{ui:SymbolIcon Symbol=ArrowDown24}">
                        <ui:Button.CommandParameter>
                            <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                <Binding ElementName="HudBorder"/>
                                <Binding ElementName="ToggleHud2"/>
                            </MultiBinding>
                        </ui:Button.CommandParameter>
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>
        <ui:Button
            Name="ToggleHud2"
            Width="{Binding ActualWidth, ElementName=ToggleHud1}"
            Height="{Binding ActualHeight, ElementName=ToggleHud1}"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Appearance="Transparent"
            BorderThickness="0"
            Command="{Binding SwtichHudVisibilityCommand}"
            CommandParameter="{Binding ElementName=HudBorder}"
            Icon="{ui:SymbolIcon Symbol=ArrowUp24}" />
    </Grid>
</ui:FluentWindow>
